
@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Guest/ViewGuest/Guest.cshtml";
}
    <style>
       .body{
           height: 100%;
       }
       h1 {
           margin-top: 32px;
       }
       strong {
           font-size: 16px;
       }
       .form-lienhe {
           font-size: 16px !important;
           margin-top: 20px;
       }
        .input-lg {
            font-size: 16px !important
        }
        .mg-bot30 {
            margin-top: 30px;
            margin-bottom: 30px;
            width: 100%;
        }
        .btn-submit {
            border-radius: 5px;
            background-color: #67a448;
            color: white;
            font-size: 20px !important;
            border: none;
        }
    </style>
<div class ="body"> 
    <div class="container">
                <div class = "lienhe">
                    <p style="border: 2px solid black"> </p>
                        <div class = "hero-image">
                            <img src="~/Content/Images/mientay.png" style="width: 100%; height: 50%">
                            <div class = "hero-text">
                            <h1> SaiGon Travel - Liên hệ chúng tôi </h1>
                            <strong> Hỗ trợ khách hàng </strong> 
                                <div class="col-xs-12 mg-bot15 form-lienhe">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12  mg-bot15">
                                            <p class="hoten"> Họ và Tên : </p>
                                            <input type="text" class="form-control input-lg" name="txt-Fullname" required />
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12  mg-bot15">
                                            <p class="email"> Email : </p>
                                            <input type="text" class="form-control input-lg" name="txt-Email" required />
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12  mg-bot15">
                                            <p class="sdt"> Số điện thoại : </p>
                                            <input type="text" class="form-control input-lg" name="txt-Sdt" required />
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  mg-bot30">
                                            <p class="noidung"> Nhập nội dung: </p>
                                            <textarea rows="5" class="form-control input-lg-nd" name="txt-Noidung" required> </textarea>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  mg-bot30">
                                            <button class="btn-submit"> Submit </button>
                                        </div>

                                    </div>
                            </div>

                        </div>
                </div>
            </div>
        </div>
    </div>
        

