<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- icon boxicons  -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!-- custom css file link  -->

    <link href="~/Content/Guest/customerinfo.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>



</head>
<body>
    @{ var user = (Tourist_VietripInsum_2023.Models.KhachHang)HttpContext.Current.Session["UserKH"];}
    <div>
        <!-- header section starts  -->
        <header class="header">
            <nav class="navbar navbar-expand-lg " style="background: #094933 ">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/Guest/HomePageGuest">
                        <img src="~/Content/Images/logo_project.png" height="40" width="30" />
                        <span>SAIGON TRAVELS</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <!-- Mega Menu -->
                            <li class="nav-item dropdown has-megamenu">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"> Du lịch </a>
                                <div class="dropdown-menu megamenu" role="menu">
                                    @Html.Action("DiaDiemPartial", "Guest")
                                </div> <!-- dropdown-mega-menu.// -->
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="~/Guest/TinTuc" role="button" aria-expanded="false">
                                    Tin tức
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link" href="~/Guest/LienHeGuest">Liên Hệ</a>
                            </li>
                         
                        </ul>


                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">

                                @if (user == null)
                                {
                                    <a style="padding-left: 150px;" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img class="img-circle" src="~/images/user.png" style="border-radius: 100%" width="30" height="30" />
                                    </a>
                                }
                                else
                                {
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span style="color: white;">Hello, @user.HoTenKH</span>
                                        @if (user.HinhDaiDien == null)
                                        {
                                            <img class="img-circle" src="~/images/user.png" style="margin-left: 5px; border-radius: 100%" width="30" height="30" />
                                        }
                                        else
                                        {
                                            <img class="img-circle" src="@user.HinhDaiDien" style="margin-left: 5px; border-radius: 100%" width="30" height="30" />
                                        }
                                    </a>
                                }
                                @if (user == null)
                                {
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="~/Guest/LoginGuest">Đăng nhập</a></li>
                                        <li><a class="dropdown-item" href="~/Guest/SignupGuest">Đăng ký</a></li>
                                    </ul>
                                }
                                else
                                {
                                    <ul style="margin-left: 50px;" class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="~/Guest/Thongtinkhachhang/@user.MaKH">Thông tin cá nhân</a></li>
                                        <li><a class="dropdown-item" href="~/Guest/LogOut">Đăng xuất</a></li>
                                    </ul>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <!-- header section ends -->
    </div>
    <section class="content-info" >
        <div class="container-sm">
            <div class=" shadow rounded-lg d-block d-sm-flex" >
                <div class="profile-tab-nav border-right" >
                    <div class="p-4 infocus">
                        <div class="img text-center mb-3">
                            <img style="width: 100px;height: 100px;border-radius: 50%" src="@user.HinhDaiDien" alt="Image" class="shadow">
                        </div>
                        <h4><b>@user.HoTenKH</b> </h4>
                        <h5>@user.Email</h5>
                    </div>
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    </div>
                    <div class="menu-func">
                        <h4>Tài khoản </h4>
                        <h5> <a href=""> Thông tin cá nhân  </a> </h5>
                        @*<h5>  <a href=""> Đổi mật khẩu</a></h5>*@
                        <h5>  <a href="">Lịch sử đơn hàng</a></h5>
                        <h5>  <a href="">Thông tin thanh toán</a></h5>
                        <h5>  <a href="">Yêu cầu xóa tài khoản</a></h5>
                        <div class="link-info">
                            <h4> <a href=""> Đơn đặt chỗ</a> </h4>
                            <h4><a href=""> Đánh giá của quý khách</a> </h4>
                        </div>

                    </div>
                </div>
                <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">

                    @RenderBody()
                    @RenderSection("scripts", false)
                </div>
            </div>
        </div>

    </section>
  





</body>
</html>
