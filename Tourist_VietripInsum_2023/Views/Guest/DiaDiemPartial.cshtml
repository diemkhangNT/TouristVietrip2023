@using Tourist_VietripInsum_2023.Models
@model IEnumerable<TinhThanh>
<style>
    .megatentinh {
        padding: 5px 20px;
        color: #2d4271;
    }
    .title {
        
        text-align: center;
        font-size: 20px;
        font-weight: 700;
        padding-bottom:10px;
    }
    .tentinhloc a {
        text-decoration: none;
        color: #2d4271;
    }
</style>
<div class="megatentinh">
    <div class="title">Du lịch khắp đất nước</div>
    <ul class="list-group">
        <div class="row">
            @foreach (var d in Model)
            {
                <div class="tentinhloc col-sm-3">
                    <a href="/Guest/ListTourTinhThanh/@d.MaTinh">
                        @d.TenTinh
                    </a>
                </div>


            }


        </div>

    </ul>
</div>

