@model IEnumerable<Tourist_VietripInsum_2023.Models.DiaDiemThamQuan>
<link href="~/Content/Guest/homepageGuest.css" rel="stylesheet" />

<div class="row g-5 g-lg-3 d-none d-lg-flex">
    @foreach (var diadiem in Model)
        {
            <div class="col-4">
                <div class="card destination-item">
                    <div class="box-container">
                        <div class="box">
                            <img src="@diadiem.HinhMinhHoa_D" alt="">
