                                <h6>@diadiem.TenDDTQ</h6>
                                <p></p>
                                <a href="/Guest/ListTour_DiaDiem/@diadiem.MaDDTQ" class="btn">see more</a>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        }



</div>