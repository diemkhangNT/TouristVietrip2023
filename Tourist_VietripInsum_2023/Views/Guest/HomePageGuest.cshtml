<section class="packages" id="packages">

    <h1 class="heading">
        TOUR NỔI BẬT
    </h1>


    <div class="box-container">

        @foreach (var item in tour)
        {
            if (item.TourNoiBat == true)
            {

                <div class="box">
                    <img src="~/Content/Images/tourhanoi.jpg" alt="">
                    <div class="content">
                        @{ 
                            var ngay = String.Format("{0:d/M/yyyy}", item.NgayKhoihanh);
                        }
                        <div class="daytour">
                            <span>@ngay</span> -
                            <span>@item.SoNgay Ngày</span>
                        </div>
                        <a></a>
                        <p class="tour-titlename">
                            <a href="/Guest/DetailTour" title="">
                                @item.TenTour
                            </a>
                        </p>
                        <div class="info-tour">
                            <p>Địa điểm khởi hành: <span>@item.NoiKhoiHanh</span></p>
                            @*p>Số ghế trống: <span>5</span></p>*@

                        </div>
                        @{ 
                            var tien = string.Format("{0:#,##0}", item.GiaNguoiLon);
                            var loaitour = db.LoaiTours.Where(s => s.MaLTour == item.MaLTour).FirstOrDefault();
                            var price = (double)item.GiaNguoiLon * (1 - loaitour.ChietKhau);
                            var tiensale= string.Format("{0:#,##0}", price);
                        }
                        <div class="tour-item__price">
                            <div class="tour-item_pricebefore">
                                Giá :
                                <span>@tien</span> đ
                            </div>
                            @{ 
                                
                            }
                            <div class="tour-item_pricecurrent">
                                <span class="tour-pricecurrent">@tiensale đ</span>
                                <span class="tour-discount">@loaitour.ChietKhau GIẢM</span>
                            </div>

                        </div>


                    </div>
                </div>
            }
        }

       
        </div>



</section>

