
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Form đăng ký</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f2f2f2;
            background-image: url('/images/img_background1.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form {
            opacity: 0.9;
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 800px;
            transition: all 0.3s ease-in-out;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

            .form:hover {
                transform: translateY(-5px);
                box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
            }

            .form input[type="text"], .form input[type="password"] , .form input[type="date"] {
                display: block;
                margin-bottom: 20px;
                padding: 10px;
                font-size: 16px;
                border: none;
                border-radius: 5px;
                width: 100%;
                background-color: #f2f2f2;
                transition: all 0.3s ease-in-out;

            }

                .form input[type="text"]:focus, .form input[type="password"]:focus, .form input[type="date"] {
                    background-color: #e2e2e2;
                    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
                    outline: none;
                }

            .form label {
                font-size: 14px;
                font-weight: 500;
                color: #888;
                margin-bottom: 5px;
                display: block;
            }

            .form input[type="submit"] {
                margin-top: 30px;
                background-color: #17a355;
                color: #fff;
                padding: 10px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                width: 100%;
                font-size: 16px;
                transition: all 0.3s ease-in-out;
            }
            .form input[type="submit"]:hover {
                    background-color: #e3b236;
            }
            h2 {
                padding-top: 150px;
            }
    </style>
</head>
<body>
    <div class="container">
        <form class="form">
            <h2>Đăng ký tài khoản</h2>
                <div class="col">
                    <label for="username">Tên đăng nhập</label>
                    <input type="text" id="username" name="username" required>
                    <label for="password">Mật khẩu</label>
                    <input type="password" id="password" name="password" required>
                    <label for="password-confirm">Nhập lại mật khẩu</label>
                    <input type="password" id="password-confirm" name="password-confirm" required>
                    <label for="phone">Số điện thoại</label>
                    <input type="text" id="phone" name="phone" required>
                </div>
                <div class="col">
                    <label for="address">Địa chỉ</label>
                    <input type="text" id="address" name="address" required>
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" required>
                    <label for="birthday"> Ngày sinh</label>
                    <input type="date" id="birthday" name="birthday">
                    <label for="avatar">Ảnh đại diện:</label>
                    <input type="file" id="avatar" name="avatar" accept=".jpg, .jpeg, .png" title="Chỉ chấp nhận tệp ảnh có định dạng JPG, JPEG và PNG.">
                    <input type="submit" value="Đăng ký" />
                    <p> Bạn đã có tài khoản?<a href="@Url.Action("DangNhap", "Guest")"> Đăng nhập</a></p>
                </div>
                </div>
                <!--Xử lí cái button đăng ký này nhen dĩm khen -->
</form>
    </div>
</body>
</html>
