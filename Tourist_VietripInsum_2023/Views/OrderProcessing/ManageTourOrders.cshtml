@model IEnumerable<Tourist_VietripInsum_2023.Models.BookTour>

@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/OrderProcessing/LayoutOP/_ViewOP.cshtml";
    ViewBag.Name = "Tour Order List";
    ViewBag.order = "active";
}

@if (TempData["Success"] != null)
{
    <script>
        swal({
            title: "Book tour thành công",
            icon: "success",
            button: "Thoát",
        });
    </script>
}
else if (TempData["deletesuccess"] != null)
{
    <script>
        swal({
            title: "Xóa đơn đặt thành công",
            icon: "success",
            button: "Thoát",
        });
    </script>
}

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="/OrderProcessing/ManageTourOrders">Order List</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/OrderProcessing/ListOfCustomers">Order For Custommer</a>
    </li>
</ul>

<div class="row">
    <div class="col-sm-12">
        <div class="tile">
            <div class="tile-body">
                <div class="row element-button" style="padding-left:10px">
                    <div class="row" style="padding-bottom: 20px;">
                        <div class="col-sm-2">
                            <a class="btn btn-success btn-sm " type="button" title="Create Order" href="/OrderProcessing/CheckCusInfo">
                                Create Order
                            </a>
                        </div>
                        <form class="col-sm-10" method="get">
                            <div>
                                @if (ViewBag.SearchInfo == null)
                                {
                                    <input class="btn-sm" type="search" name="search" placeholder="Enter phone number" style="width: 250px;" />
                                }
                                else
                                {
                                    <input class="btn-sm" type="search" name="search" style="width: 250px;" value="@ViewBag.SearchInfo" />
                                }
                                <input class="btn btn-success btn-sm" type="submit" value="Search" />
                            </div>
                        </form>
                    </div>
                    <table class="table">
                        <thead style="background-color: #ffd43b;">
                            <tr>
                                <th aria-controls="sampleTable" rowspan="1" colspan="1">ID Order</th>
                                <th aria-controls="sampleTable" rowspan="1" colspan="1">Number Phone</th>
                                <th aria-controls="sampleTable" rowspan="1" colspan="1">ID Tour</th>
                                <th aria-controls="sampleTable" rowspan="1" colspan="1">Date</th>
                                <th aria-controls="sampleTable" rowspan="1" colspan="1">Status</th>
                                <th aria-controls="sampleTable" rowspan="1" colspan="1">Total Price</th>
                                <th aria-controls="sampleTable" rowspan="1" colspan="1">Number Of Seats</th>
                                <th aria-controls="sampleTable" rowspan="1" colspan="1">Option</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="9" class="text-center"> Records not found </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaDH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SdtKH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaTour)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgayLap)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TrangThaiTT)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalPrice)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SoCho)
                                        </td>
                                        <td>
                                            <a href="/OrderProcessing/BookTourDetail/@item.MaDH " class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Detail">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="/OrderProcessing/DeleteOrder/@item.MaDH" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Delete">
                                                <i class="fas fa-train"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
