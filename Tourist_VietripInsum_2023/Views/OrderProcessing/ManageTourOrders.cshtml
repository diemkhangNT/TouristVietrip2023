@model IEnumerable<Tourist_VietripInsum_2023.Models.BookTour>

@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/OrderProcessing/LayoutOP/_ViewOP.cshtml";
    ViewBag.Name = "Tour Order List";
    ViewBag.order = "active";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @if (TempData["deletesuccess"] != null)
    {
        <script>
            swal({
                title: "Xóa đơn đặt tour thành công",
                icon: "success",
                button: "Thoát",
            });
        </script>
    }

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/OrderProcessing/ManageTourOrders">Danh sách đơn đặt</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/OrderProcessing/ListOfCustomers">Danh sách khách hàng</a>
        </li>
    </ul>

    <div class="row">
        <div class="col-sm-12">
            <div class="tile">
                <div class="tile-body">
                    <h5 class="tile-title">DANH SÁCH ĐƠN ĐẶT TOUR</h5>
                    <div class="row element-button" style="padding-left:10px">
                        <div class="row ">
                            <div class="element-button">
                                <a class="btn btn-success btn-sm " type="button" title="Create Order" href="/OrderProcessing/CheckCusInfo">
                                    Đặt Tour
                                </a>
                            </div>
                            @*<form class="col-sm-10" method="get">
                                <div>
                                    @if (ViewBag.SearchInfo == null)
                                    {
                                        <input class="btn-sm" type="search" name="search" placeholder="Enter phone number" style="width: 250px;" />
                                    }
                                    else
                                    {
                                        <input class="btn-sm" type="search" name="search" style="width: 250px;" value="@ViewBag.SearchInfo" />
                                    }
                                    <input class="btn btn-success btn-sm" type="submit" value="Search" />
                                </div>
                            </form>*@
                        </div>
                        <div class="row table-responsive">
                            <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                                <thead style="background-color: #ffd43b;">
                                    <tr>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1">Mã đơn hàng</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1">Số điện thoại</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1">Mã tour</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1">Ngày đặt</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1">Trạng thái</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1">Tổng tiền</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1">Số chỗ</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1">Tùy chọn</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model.Count() == 0)
                                    {
                                        <tr>
                                            <td colspan="9" class="text-center"> Records not found </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MaDH)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SdtKH)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MaTour)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NgayLap)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TrangThaiTT)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TotalPrice)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SoCho)
                                                </td>
                                                <td>
                                                    <a href="/OrderProcessing/BookTourDetail/@item.MaDH " class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Detail">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="/OrderProcessing/DeleteOrder/@item.MaDH" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Delete">
                                                        <i class="fas fa-remove"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
