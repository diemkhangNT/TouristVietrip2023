@model Tourist_VietripInsum_2023.Models.Tour

@{
    ViewBag.Title = "TourDetails";
    Layout = "~/Views/Tourmanager/LayoutTM/_ViewTM.cshtml";
    ViewBag.Name = "Tour Manager";
    ViewBag.qlt = "active";
}


<style>
    .info div{
        padding-top:10px;
        padding-left:50px;
    }
</style>
<div class="tile">
    @*<h5 class="tile-title">THÔNG TIN TOUR</h5>*@

    <div class="tile-body">

        <div class="row element-button">
            <div class="col-sm-2">
                <a class="btn btn-warning btn-sm " type="button" title="List Detail" href="/Tourmanager/ListDetailTour/@Model.IdTour">
                    Danh sách lịch trình
                </a>
            </div>
            @*<div class="col-sm-2">
                <a class="btn btn-success btn-sm " type="button" title="Back" href="/Tourmanager/CreateDetailTour/@Model.IdTour">
                    Thêm lịch trình
                </a>
            </div>*@
            <div class="col-sm-2">
                <a class="btn btn-danger btn-sm" type="button" title="DeleteTour" data-toggle="modal" data-target="#myModal">
                    Xóa tour
                </a>

            </div>
        </div>


        <div class="container">
            <div class="row">
                <div class="col-sm-3 " style="text-align:center;padding-top:40px;">
                    <img src="@Model.ImagerTour" width="250" height="180" />
                </div>
                <div class="info col-sm-9">
                    <h3>THÔNG TIN TOUR</h3>
                    <div class=" col-sm-4">
                        <span id="idtourc">
                            <strong>
                                Name Tour:
                            </strong>  @Html.DisplayFor(model => model.IdTour)

                        </span>
                    </div>
                    <div class="col-sm-4">
                        <strong>Type Tour: </strong>@Html.DisplayFor(model => model.Id_TypeTour)
                    </div>
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-12">
                        <strong>Tour Name: </strong>@Html.DisplayFor(model => model.TourName)
                    </div>
                    <div class="col-sm-4">
                        <strong>Điểm đi: </strong>@Html.DisplayFor(model => model.DeparturePlace)
                    </div>
                    <div class="col-sm-4">
                        <strong>Điểm đến: </strong>@Html.DisplayFor(model => model.DeparturePlace)
                    </div>
                    <div class="col-sm-4">
                        <strong>Số chổ: </strong>@Html.DisplayFor(model => model.NumberAvailable)
                    </div>
                    @{
                        var han = String.Format("{0:d/M/yyyy}", Model.DeadlineOrder);
                        var ngay = String.Format("{0:d/M/yyyy}", Model.Departure);
                    }
                    <div class="col-sm-4">
                        <strong>Ngày khởi hành: </strong>@Html.DisplayFor(model => ngay)
                    </div>

                    <div class="col-sm-4">
                        <strong>Thời gian đi: </strong>@Html.DisplayFor(model => model.TimeTour)
                    </div>
                    <div class="col-sm-4">
                        <strong>Hạn đặt: </strong>@Html.DisplayFor(model => han)
                    </div>
                    <div class="col-sm-12">
                        <strong>Mô tả: </strong>@Html.DisplayFor(model => model.Mota)
                    </div>
                    <div class="col-sm-12">
                        <table>
                            @*//Phần render từng dòng trong C#*@
                            <thead>
                                <tr style="background-color: #ffd43b;">
                                    <th>Vé người lớn</th>
                                    <th>Vé trẻ em</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => Model.PriceAdult)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model.PriceChildren)
                                    </td>

                                </tr>

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <div>

            </div>
            <div>
                @Html.ActionLink("Back to List", "QuanLyTour")
            </div>
        </div>
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h3>!!!!</h3>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        Are you sure to delete the tour ?!
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <a type="button" class="btn btn-success btn-sm" data-dismiss="modal">Close</a>
                        <a type="button" class="btn btn-danger btn-sm" href="/Tourmanager/DeleteTour/@Model.IdTour">Delete</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
 
   

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="Scripts/jquery-1.4.1.js" type="text/javascript"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>





