@model Tourist_VietripInsum_2023.Models.Staff

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Tourmanager/LayoutTM/_ViewTM.cshtml";
    ViewBag.Name = "Profile";
    ViewBag.prf = "active";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" type="text/css" href="~/Content/style_profile.css">
</head>
<body>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="tile">
                <h3 class="tile-title">
                    <i class="bx bxs-user"></i>
                    Profile
                </h3>
                <div class="row rounded-lg d-block d-sm-flex">
                    <div class="col-lg-4 col-md-3 col-sm-12 profile-tab-nav border-right">
                        <div class="p-4">
                            <div class="img text-center mb-3">
                                <img style="width: 100px;height: 100px;border-radius: 50%" src="@Model.Avatar" alt="Image" class="shadow">
                            </div>
                            <h2 class="text-center">
                                @{var user1 = (Tourist_VietripInsum_2023.Models.Staff)HttpContext.Current.Session["user"];
                                    @user1.FullName}
                            </h2>
                            <div class="nav flex-column nav-pills online" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                <p>
                                    <i class=' bx bxs-circle text-success'></i><span class="app-menu__label">Online</span>
                                </p>
                            </div>
                            <br />
                            <div class="text-center mb-5" id="v-pills-tab" role="tablist" aria-orientation="vertical">

                                <span class="editProfile">Edit</span>

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-9 col-sm-12 tab-content" id="v-pills-tabContent">
                        <div class="" id="account" role="tabpanel" aria-labelledby="account-tab">
                            <h2 class="title_acc text-danger">General</h2>
                            @{
                                var user = (Tourist_VietripInsum_2023.Models.Staff)HttpContext.Current.Session["user"];
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label>Position</label>
                                            <h2>@user.Position.NamePos</h2>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>ID Staff</label>
                                            <h2>@user.IdStaff</h2>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Phone number</label>
                                            <h2>@user.NumberPhone</h2>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Address</label>
                                            <h2>@user.StaffAddress</h2>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <h2>@user.StaffEmail</h2>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Birthday</label>
                                            <h2>@user.StaffBirthday</h2>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Gender</label>
                                            <h2>@user.Gender</h2>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            }
                            <h2 class="title_acc text-danger">Login</h2>
                            @{
                                var user2 = (Tourist_VietripInsum_2023.Models.Staff)HttpContext.Current.Session["user"];
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Username</label>
                                            <h2>@user2.Username</h2>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Password</label>

                                            <p>A password security help protect your account</p>
                                            <h2><b>**********</b></h2>
                                            <p>Last changed: 19/12/2022 </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

