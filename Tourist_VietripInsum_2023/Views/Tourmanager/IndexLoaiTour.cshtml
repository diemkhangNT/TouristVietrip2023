@model IEnumerable<Tourist_VietripInsum_2023.Models.LoaiTour>

@{
    ViewBag.Title = "IndexLoaiTour";
    Layout = "~/Views/Tourmanager/LayoutTM/_ViewTM.cshtml";
}

<h2>Danh sách loại tour</h2>

<a class="btn btn-success btn-sm " type="button" title="CreateTour" href="/Tourmanager/CreateLoaiTour">
    Tạo loại tour mới
</a>
<table class="table">
    <tr>
        <th>Mã loại</th>
        <th>
            @Html.DisplayNameFor(model => model.TenLTour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChietKhau)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLTour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLTour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChietKhau)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditLoaiTour", new { id = item.MaLTour }) |
                <a class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Delete" data-target="#DeleteModal-@item.MaLTour" data-toggle="modal">
                    <i class="fas fa-trash"></i>
                </a>
                @using (Html.BeginForm("DeleteLoaiTour/" + item.MaLTour, "Tourmanager", FormMethod.Post, null))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal" tabindex="-1" role="dialog" id="DeleteModal-@item.MaLTour">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Delete Confirmation</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this customer?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                    <button type="submit" class="btn btn-danger">Yes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </td>
        </tr>
    }

</table>
