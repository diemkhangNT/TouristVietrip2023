@model Tourist_VietripInsum_2023.Models.LoaiTour

@{
    ViewBag.Title = "CreateLoaiTour";
    Layout = "~/Views/Tourmanager/LayoutTM/_ViewTM.cshtml";
    ViewBag.Name = "Tour Manager";
    ViewBag.qlt = "active";
}


<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div class="tile">
            <h2 class="tile-title"> CreateLoaiTour</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

