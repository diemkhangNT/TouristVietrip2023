                            <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                                @*//Phần render từng dòng trong C#*@
                                <thead style="background-color:antiquewhite;">
                                    <tr>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 20px;">IdTour</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 40px;">Type Tour</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 100px;">Tour Name</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 20px;">Chổ</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 80px;">Thời gian tour</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 50px;">Hạn</th>
