@model IEnumerable<Tourist_VietripInsum_2023.Models.Tour>
@using Tourist_VietripInsum_2023.Models
@{
    ViewBag.Title = "Tour manager";
    Layout = "~/Views/Tourmanager/LayoutTM/_ViewTM.cshtml";
    ViewBag.Name = "Tour Manager";
    ViewBag.qlt = "active";
    TouristEntities1 db = new TouristEntities1();
    List<Tour> t = db.Tours.ToList();
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
@{
    var checkMessage = TempData["noti"];
    if (checkMessage == "thieu")
    {
        <script>
            swal({
                title: "erorr",
                text: "Welcome to your back!",
                icon: "success",
                button: "OK",
            });
        </script>
    }
    else if(checkMessage=="oke")
            {
        <script>
            swal("Good job!", "You clicked the button!", "success");
        </script>
            }
}
<link href="~/Content/searchtour.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">

                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Tour</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Tourmanager/HotelManager">Hotel</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Transport</a>
                    </li>

                </ul>

                <div class="row" style="padding:10px">
                    <div class="col-md-2 col-sm-2">
                        <a class="btn btn-success btn-sm " type="button" title="CreateTour" href="/Tourmanager/CreateTours">
                            Create Tour
                        </a>
                    </div>
                    <div class="col-md-4"></div>
                    <div class="col-md-6 ">
                        <div class="form-input pull-right">
                            <i class="fas fa-search"></i>
                            <input type="text"
                                   id="filter"
                                   placeholder="Search tour...." />
                        </div>

                        <div class="products" hidden>
                            <div>
                                <h3>Loading...</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="sampleTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="row" id="tourlist">
                        <div class="col-sm-12">
                            <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                                @*//Phần render từng dòng trong C#*@
                                <thead style="background-color: #ffd43b;">
                                    <tr>

                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 20px;">IdTour</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 40px;">Type Tour</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 100px;">Tour Name</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 80px;">Thời gian tour</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 20px;">Chổ</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 50px;">Hạn</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 50px;">Chức năng</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {

                                        <tr>


                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdTour)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Id_TypeTour)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TourName)
                                            </td>

                                            @{
                                                //DateTime timetour = (DateTime)item.Departure;
                                                //int i = (int)item.TimeTour;
                                                //DateTime timend = timetour.AddDays(i);
                                                var bd = String.Format("{0:d/M/yyyy}", item.Departure);
                                                //var en = String.Format("{0:d/M/yyyy}", timend);
                                            }
                                            <td>

                                                @Html.DisplayFor(modelItem => bd)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumberAvailable)
                                            </td>
                                            <td>
                                                @{
                                                    var day = String.Format("{0:d/M/yyyy}", item.DeadlineOrder);
                                                }
                                                @Html.DisplayFor(modelItem => day)
                                            </td>

                                            <td style="text-align:center">
                                                <a href="/Tourmanager/EditTour/@item.IdTour" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/Tourmanager/TourDetails/@item.IdTour" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Detail">
                                                    <i class="fas fa-train"></i>
                                                </a>
                                                @*<a href="/Tourmanager/DeleteTour/@item.IdTour" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Edit">
                                                <i class="fas fa-trash"></i>
                                            </a*@
                                            
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        
        </div>
        </div>
    </div>

    </div>
</div>
<script src="~/Scripts/searchtour.js"></script>
