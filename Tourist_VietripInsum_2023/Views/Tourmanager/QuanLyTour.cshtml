@model IEnumerable<Tourist_VietripInsum_2023.Models.Tour>
@using Tourist_VietripInsum_2023.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Tourmanager/LayoutTM/_ViewTM.cshtml";
    ViewBag.Name = "Tour Manager";
    ViewBag.qlt = "active";
    TouristEntities1 db = new TouristEntities1();
    var dsLT = db.TourTypes.ToList();
    var dsHT = db.Hotels.ToList();
    var dsTQ = db.VistLocations.ToList();
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                @*Danh sách loại tour*@
                <div class="row element-button" style="padding-left:10px">
                    <div class="col-sm-2">
                        <a class="btn btn-success btn-sm " type="button" title="CreateTourType" href="/Tourmanager/CreateTourType">
                            Create Tour Type
                        </a>
                    </div>
                </div>
                <div id="sampleTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="row" style="padding-top:10px">
                        <div class="col-sm-12">
                            <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                                @*//Phần render từng dòng trong C#*@
                                <thead>
                                    <tr role="row" class="col-staff">
                                        <th class="sorting">Id Tour Type</th>
                                        <th class="sorting">Name Type Tour</th>
                                        <th class="sorting">Discount</th>
                                        <th class="sorting" style="text-align: center;">Option</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in dsLT)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TypeName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Discount)
                                            </td>
                                            <td style="text-align:center">
                                                <a href="/Tourmanager/TourTypeDetails/@item.IdType" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Details">
                                                    <i class="fas fa-train"></i>
                                                </a>
                                                <a href="/Tourmanager/EditTourType/@item.IdType" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/Tourmanager/DeleteTourType/@item.IdType" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                @*Danh sách khách sạn*@
                <div class="row element-button" style="padding-left:10px">
                    <div class="col-sm-2">
                        <a class="btn btn-success btn-sm " type="button" title="CreateHotel" href="/Tourmanager/CreateHotel">
                            Create Hotel
                        </a>
                    </div>
                </div>
                <div id="sampleTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="row" style="padding-top:10px">
                        <div class="col-sm-12">
                            <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                                @*//Phần render từng dòng trong C#*@
                                <thead>
                                    <tr role="row" class="col-staff">
                                        <th class="sorting">Image</th>
                                        <th class="sorting">Id Hotel</th>
                                        <th class="sorting">Level Hotel</th>
                                        <th class="sorting">Name Hotel</th>
                                        <th class="sorting">Address Hotel</th>
                                        <th class="sorting" style="text-align: center;">Option</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in dsHT)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ImgHotel)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdHotel)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LevelHotel)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NameHotel)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AddressHotel)
                                            </td>
                                            <td style="text-align:center">
                                                <a href="/Tourmanager/HotelDetails/@item.IdHotel" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Details">
                                                    <i class="fas fa-train"></i>
