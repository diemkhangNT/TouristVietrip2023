                                                </a>
                                                <a href="/Tourmanager/DeleteVisitLocations/@item.IdVistLocat" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Tour</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Tourmanager/HotelManager">Hotel</a>
                    </li>
                    <li class="nav-item">
