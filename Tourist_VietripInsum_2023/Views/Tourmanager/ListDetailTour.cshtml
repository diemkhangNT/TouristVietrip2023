@*@model Tourist_VietripInsum_2023.Models.DetailTour*@
@model IEnumerable<Tourist_VietripInsum_2023.Models.DetailTour>
@using Tourist_VietripInsum_2023.Models
@{
    ViewBag.Title = "ListDetailTour";
    Layout = "~/Views/Tourmanager/LayoutTM/_ViewTM.cshtml";
    TouristEntities1 db = new TouristEntities1();
    ViewBag.Name = "List Detail";
    ViewBag.qlt = "active";


}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <div class="row" style="padding:10px">
                    <div class="col-sm-2">
                        <a class="btn btn-success btn-sm " type="button" title="Back to List" href="/Tourmanager/CreateDetailTour/@ViewBag.idt">
                            Thêm Lịch trình
                        </a>
                    </div>
                </div>
            </div>
                <h3>DANH SÁCH CHI TIẾT</h3>
                <div id="sampleTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                                @*//Phần render từng dòng trong C#*@
                                <thead>
                                    <tr>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 20px;">Stt</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 40px;">Địa điểm</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 100px;">Khách sạn</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 20px;">Phương tiện</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 80px;">Điểm tập trung</th>
                                        <th aria-controls="sampleTable" rowspan="1" colspan="1" style="width: 50px;">Chức năng</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        //var check = dtour[i];
                                        //if (dtour[i].IdTour == Model.IdTour)
                                        //{
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Stt)
                                            </td>
                                            @{
                                                var ht = db.Hotels.Where(s => s.IdHotel == item.IdHotel).FirstOrDefault();
                                            }
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdVistLocat)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => ht.NameHotel)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdTrans)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InfoConcentrate)
                                            </td>

                                            <td style="text-align:center">
                                                <a href="/Tourmanager/EditDetailTour/@item.IdSchedule" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/Tourmanager/DetailTourDetail/@item.IdSchedule" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Edit">
                                                    <i class="fas fa-train"></i>
                                                </a>
                                                <a href="/Tourmanager/DeleteDetailTour/@item.IdSchedule" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Edit">
                                                    <i class="fas fa-trash"></i>
                                                </a>

                                            </td>
                                        </tr>


                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row element-button" style="padding:10px">
        <div class="col-sm-2">
            <a class="btn btn-warning btn-sm " type="button" title="Back to List" href="/Tourmanager/TourDetails/@ViewBag.idt">
                Create Tour
            </a>
        </div>
    </div>
</div>

