@model Tourist_VietripInsum_2023.Models.Hotel

@{
    ViewBag.Title = "CreateHotel";
    Layout = "~/Views/Tourmanager/LayoutTM/_ViewTM.cshtml";
    ViewBag.Name = "Hotel Manager";
    ViewBag.qlt = "active";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="tile">
            <h4 class="tile-title"> CREATE NEW HOTEL</h4>
            <div class="tile-body">
                @using (Html.BeginForm("CreateHotel", "Tourmanager"))
                {
                    @Html.AntiForgeryToken()
                    <div class="container">


                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MaKS)
                            <div class="row">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaTinh, "MaTinh", htmlAttributes: new { @class = "control-label col-md-12" })
                                    <div class="col-md-12">
                                        @Html.DropDownList("MaTinh", null, htmlAttributes: new { @class = "form-control col-md-12" })
                                        @Html.ValidationMessageFor(model => model.MaTinh, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenKS, htmlAttributes: new { @class = "control-label col-md-12" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.TenKS, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                        @Html.ValidationMessageFor(model => model.TenKS, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Sao, htmlAttributes: new { @class = "control-label col-md-12" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.Sao, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                        @Html.ValidationMessageFor(model => model.Sao, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" value="Create Hotel" class="btn btn-success btn-sm" />
                                    <a class="btn btn-warning" href="/Tourmanager/HotelManager"> Trở lại</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>



