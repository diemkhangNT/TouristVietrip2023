@model Tourist_VietripInsum_2023.Models.Hotel

@{
    ViewBag.Title = "EditHotel";
    Layout = "~/Views/Tourmanager/LayoutTM/_ViewTM.cshtml";
    ViewBag.Name = "Hotel Manager";
    ViewBag.qlt = "active";
}
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="tile">
            <h4 class="tile-title"> CHỈNH SỬA HOTEL CÓ MÃ @Model.MaKS</h4>
            <div class="tile-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaKS)
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaTinh, "Tên tỉnh thành", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownList("MaTinh", null, htmlAttributes: new { @class = "form-control col-md-12" })
                                @Html.ValidationMessageFor(model => model.MaTinh, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenKS, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.TenKS, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                                @Html.ValidationMessageFor(model => model.TenKS, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Sao, "Cấp độ", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                <select class="form-control col-md-12" id="Sao" name="Sao">
                                    <option>1 sao</option>
                                    <option>2 sao</option>
                                    <option>3 sao</option>
                                    <option>4 sao</option>
                                    <option>5 sao</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.Sao, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save Edit" class="btn btn-success" />
                                <a class="btn btn-warning" href="/Tourmanager/HotelManager"> Trở lại</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-3"></div>
</div>
